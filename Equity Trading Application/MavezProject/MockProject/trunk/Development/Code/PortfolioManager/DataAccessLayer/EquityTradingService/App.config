  <system.serviceModel>
    <services>
      <service name="EquityTradingService.PortfolioService">
        <host>
          <baseAddresses>
            <add baseAddress = "http://localhost:8742/EquityTradingService/PortfolioService/" />
          </baseAddresses>
        </host>
        <!-- Service Endpoints -->
        <!-- Unless fully qualified, address is relative to base address supplied above -->
